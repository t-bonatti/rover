{
    "compilerOptions": {
      "module": "commonjs",                    
      "declaration": true,
      "removeComments": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2017",                          
      "sourceMap": true,
      "outDir": "./dist",                          
      "allowJs": true,
      "baseUrl": "/",
      "strictNullChecks": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true
    }
  }
  